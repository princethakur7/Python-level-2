import random

# List of words for the game
word_list = ['python', 'hangman', 'developer', 'aelius', 'training', 'code', 'keyboard', 'laptop']

# Hangman art for different wrong attempts
hangman_stages = [
    '''
      +---+
      |   |
          |
          |
          |
          |
    =========''',
    '''
      +---+
      |   |
      O   |
          |
          |
          |
    =========''',
    '''
      +---+
      |   |
      O   |
      |   |
          |
          |
    =========''',
    '''
      +---+
      |   |
      O   |
     /|   |
          |
          |
    =========''',
    '''
      +---+
      |   |
      O   |
     /|\\  |
          |
          |
    =========''',
    '''
      +---+
      |   |
      O   |
     /|\\  |
     /    |
          |
    =========''',
    '''
      +---+
      |   |
      O   |
     /|\\  |
     / \\  |
          |
    ========='''
]

MAX_TRIES = len(hangman_stages) - 1


def get_random_word():
    """Selects a random word from the word_list"""
    return random.choice(word_list)


def display_word(secret_word, guessed_letters):
    """Returns the word with unguessed letters as underscores"""
    display = ''
    for letter in secret_word:
        if letter in guessed_letters:
            display += letter + ' '
        else:
            display += '_ '
    return display.strip()


def get_valid_guess(guessed_letters):
    """Prompts user for a valid guess and checks for duplicates"""
    while True:
        guess = input("Guess a letter: ").lower()
        if not guess.isalpha() or len(guess) != 1:
            print("âŒ Please enter a single alphabet.")
        elif guess in guessed_letters:
            print("ğŸ” You already guessed that letter.")
        else:
            return guess


def play_hangman():
    secret_word = get_random_word()
    guessed_letters = []
    wrong_guesses = 0
    print("\nğŸ® Welcome to Hangman!\n")

    while wrong_guesses < MAX_TRIES:
        print(hangman_stages[wrong_guesses])
        print("Word: ", display_word(secret_word, guessed_letters))
        print("Guessed Letters: ", ' '.join(guessed_letters))
        guess = get_valid_guess(guessed_letters)
        guessed_letters.append(guess)

        if guess in secret_word:
            print("âœ… Good guess!")
            if all(letter in guessed_letters for letter in secret_word):
                print("\nğŸ‰ Congratulations! You guessed the word:", secret_word)
                break
        else:
            wrong_guesses += 1
            print("âŒ Wrong guess!")

    if wrong_guesses == MAX_TRIES:
        print(hangman_stages[wrong_guesses])
        print("ğŸ’€ Game Over! The word was:", secret_word)


def ask_to_play_again():
    """Asks the player if they want to play again"""
    while True:
        answer = input("Do you want to play again? (yes/no): ").lower()
        if answer in ['yes', 'y']:
            return True
        elif answer in ['no', 'n']:
            return False
        else:
            print("Please type yes or no.")


# Main Game Loop
if __name__ == "__main__":
    while True:
        play_hangman()
        if not ask_to_play_again():
            print("ğŸ‘‹ Thanks for playing Hangman! See you again.")
            break
